<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               android:orientation="vertical"
                                               android:layout_width="fill_parent"
                                               android:layout_height="fill_parent">


    <LinearLayout
        android:id="@+id/layout_fine_webview_bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#66ccff"
        >
        <Button
            android:id="@+id/layout_fine_webview_button_goback"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/layout_fine_webview_button_goforward"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/layout_fine_webview_button_refresh"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <WebView
        android:id="@+id/layout_fine_webview_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_fine_webview_bar"
        />
</RelativeLayout>